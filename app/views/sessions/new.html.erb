<div class="max-w-md mx-auto py-8">
  <h1 class="text-xl font-semibold mb-4">Sign in</h1>
  <%= form_with url: login_path, local: true do |f| %>
    <div class="mb-2">
      <%= label_tag :email %>
      <%= email_field_tag :email, nil, class: "w-full border rounded p-2", required: true %>
    </div>
    <div class="mb-2">
      <%= label_tag :password %>
      <%= password_field_tag :password, nil, class: "w-full border rounded p-2", required: true %>
    </div>
    <div class="flex gap-2">
      <%= submit_tag "Sign in", class: "px-4 py-2 bg-green-600 text-white rounded" %>
      <%= link_to "Sign up", signup_path, class: "ml-2 underline" %>
    </div>
  <% end %>
</div>

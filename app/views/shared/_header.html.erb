<div class="flex items-center justify-between py-3">
  <div class="flex items-center gap-4">
    <!-- small toggle button visible on small screens too -->
    <button onclick="toggleSidebar()" class="md:hidden p-2 rounded hover:bg-gray-100">
      <svg class="h-6 w-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/></svg>
    </button>
  </div>

  <div class="flex items-center gap-3">
    <% if user_signed_in? %>
      <span class="text-sm text-gray-700 hidden md:inline">Hi, <%= current_user.name %></span>
      <%= button_to "Sign out", logout_path, method: :delete, class: "px-3 py-1 rounded text-sm bg-brand text-white" %>
    <% else %>
      <%= link_to "Sign in", login_path, class: "text-sm px-3 py-1 rounded hover:bg-gray-50" %>
      <%= link_to "Sign up", signup_path, class: "text-sm px-3 py-1 rounded bg-brand text-white" %>
    <% end %>
  </div>
</div>
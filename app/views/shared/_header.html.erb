<!-- Minimal ChatGPT-like header: fixed top, subtle shadow, logo left, avatar + menu right -->
<header class="fixed top-0 left-0 right-0 z-50 bg-white border-b border-neutral-200">
  <div class="flex items-center justify-between h-14 px-4 md:px-6">
    <!-- Left: Logo (simplified for minimal look) -->
    <div class="flex items-center">
      <%= link_to root_path, class: "flex items-center gap-2", aria: { label: "devwerkhouz home" } do %>
        <%= image_tag "dwh_fullname.png", alt: "devwerkhouz", class: "h-7 md:h-8 w-auto object-contain" %>
      <% end %>
    </div>

    <!-- Right: User actions or auth buttons -->
    <div class="flex items-center gap-3">
      <% if user_signed_in? %>
        <!-- User avatar with dropdown menu -->
        <div class="relative" data-controller="dropdown">
          <button 
            type="button"
            data-action="click->dropdown#toggle"
            aria-label="User menu"
            aria-expanded="false"
            class="flex items-center gap-2 px-2 py-1.5 rounded-lg hover:bg-neutral-100 transition-colors focus:outline-none focus:ring-2 focus:ring-brand focus:ring-offset-2"
          >
            <!-- Avatar: initials or default icon -->
            <div class="w-8 h-8 rounded-full bg-accent-orange text-white flex items-center justify-center text-sm font-medium">
              <%= current_user.name.presence&.first&.upcase || current_user.email.first.upcase %>
            </div>
            <svg class="w-4 h-4 text-neutral-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>

          <!-- Dropdown menu -->
          <div 
            data-dropdown-target="menu"
            class="hidden absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg border border-neutral-200 py-1 z-50"
          >
            <div class="px-4 py-2 border-b border-neutral-100">
              <p class="text-sm font-medium text-neutral-900"><%= current_user.name.presence || "User" %></p>
              <p class="text-xs text-neutral-600 truncate"><%= current_user.email %></p>
            </div>
            
            <%= link_to dashboard_path, class: "flex items-center gap-3 px-4 py-2 text-sm text-neutral-700 hover:bg-neutral-50 transition-colors" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
              </svg>
              <span>Dashboard</span>
            <% end %>

            <%= link_to edit_user_registration_path, class: "flex items-center gap-3 px-4 py-2 text-sm text-neutral-700 hover:bg-neutral-50 transition-colors" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
              <span>Settings</span>
            <% end %>

            <div class="border-t border-neutral-100 my-1"></div>

            <%= button_to destroy_user_session_path, 
                  method: :delete,
                  form: { class: "w-full" },
                  class: "flex items-center gap-3 px-4 py-2 text-sm text-neutral-700 hover:bg-neutral-50 transition-colors w-full text-left" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
              </svg>
              <span>Sign out</span>
            <% end %>
          </div>
        </div>
      <% else %>
        <!-- Auth buttons for logged-out users -->
        <%= link_to "Sign in", 
              new_user_session_path, 
              class: "px-4 py-1.5 text-sm text-neutral-700 hover:text-neutral-900 transition-colors" %>
        <%= link_to "Sign up", 
              new_user_registration_path, 
              class: "btn-orange px-4 py-1.5 text-sm" %>
      <% end %>

      <!-- Mobile: hamburger menu toggle for sidebar -->
      <button 
        type="button"
        onclick="window.toggleSidebar()"
        aria-label="Toggle sidebar"
        class="md:hidden p-2 rounded-lg hover:bg-neutral-100 text-neutral-600"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>
</header>

<script>
  // Simple dropdown toggle (Stimulus controller would be better, but keeping minimal JS)
  document.addEventListener('DOMContentLoaded', function() {
    const dropdowns = document.querySelectorAll('[data-controller="dropdown"]');
    dropdowns.forEach(dropdown => {
      const button = dropdown.querySelector('button');
      const menu = dropdown.querySelector('[data-dropdown-target="menu"]');
      
      if (button && menu) {
        button.addEventListener('click', function(e) {
          e.stopPropagation();
          const isOpen = !menu.classList.contains('hidden');
          
          // Close all dropdowns
          document.querySelectorAll('[data-dropdown-target="menu"]').forEach(m => m.classList.add('hidden'));
          
          // Toggle current dropdown
          if (!isOpen) {
            menu.classList.remove('hidden');
            button.setAttribute('aria-expanded', 'true');
          } else {
            button.setAttribute('aria-expanded', 'false');
          }
        });
      }
    });
    
    // Close dropdowns when clicking outside
    document.addEventListener('click', function(e) {
      if (!e.target.closest('[data-controller="dropdown"]')) {
        document.querySelectorAll('[data-dropdown-target="menu"]').forEach(menu => {
          menu.classList.add('hidden');
        });
        document.querySelectorAll('[data-controller="dropdown"] button').forEach(btn => {
          btn.setAttribute('aria-expanded', 'false');
        });
      }
    });
  });
</script>

<header class="fixed top-0 left-0 right-0 z-50 bg-white border-b border-neutral-200">
  <div class="flex items-center justify-between h-14 px-4 md:px-6">
    <!-- Left: package viewer logo -->
    <div class="flex items-center gap-3">
      <%= link_to root_path, class: "flex items-center gap-2", aria: { label: "devwerkhouz home" } do %>
        <%= image_tag "dwh_fullname.png", alt: "devwerkhouz", class: "h-8 w-auto object-contain" %>
      <% end %>

      <!-- optional small package/viewer indicator -->
      <div class="hidden md:flex items-center text-xs text-neutral-500 px-2 py-0.5 rounded bg-neutral-50 border border-neutral-100">
        <span class="font-medium">v1.0</span>
      </div>
    </div>

    <!-- Middle: (optional) page title / search â€” keep minimal -->
    <div class="flex-1 px-4 hidden md:flex items-center justify-center">
      <!-- reserved for page-level title or search -->
    </div>

    <!-- Right: share, prompt edit/settings, user menu -->
    <div class="flex items-center gap-3">
      <%# Share button %>
      <%= button_to "#", method: :get, class: "inline-flex items-center gap-2 px-3 py-1.5 rounded-lg hover:bg-neutral-100 transition-colors focus:outline-none focus:ring-2 focus:ring-brand focus:ring-offset-2", data: { action: "share#open" } do %>
        <svg class="w-5 h-5 text-neutral-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 12v.01M12 12v.01M20 12v.01M4 12a8 8 0 0116 0" />
        </svg>
        <span class="hidden sm:inline text-sm text-neutral-700">Share</span>
      <% end %>

      <%# Prompt edit / quick actions %>
      <%= link_to "#", class: "inline-flex items-center gap-2 px-3 py-1.5 rounded-lg hover:bg-neutral-100 transition-colors focus:outline-none focus:ring-2 focus:ring-brand focus:ring-offset-2", title: "Prompt actions" do %>
        <svg class="w-5 h-5 text-neutral-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7" />
        </svg>
        <span class="hidden sm:inline text-sm text-neutral-700">Actions</span>
      <% end %>

      <% if user_signed_in? %>
        <!-- User avatar with dropdown menu -->
        <div class="relative" data-controller="dropdown">
          <button
            type="button"
            data-action="click->dropdown#toggle"
            aria-label="User menu"
            aria-expanded="false"
            class="flex items-center gap-2 px-2 py-1.5 rounded-lg hover:bg-neutral-100 transition-colors focus:outline-none focus:ring-2 focus:ring-brand focus:ring-offset-2"
          >
            <!-- Avatar: image or initial -->
            <% if current_user&.avatar_url.present? %>
              <%= image_tag current_user.avatar_url, alt: current_user.name || current_user.email, class: "w-8 h-8 rounded-full object-cover" %>
            <% else %>
              <div class="w-8 h-8 rounded-full bg-accent-orange text-white flex items-center justify-center text-sm font-medium">
                <%= current_user.name&.first&.upcase || current_user.email&.first&.upcase || "U" %>
              </div>
            <% end %>

            <svg class="w-4 h-4 text-neutral-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>

          <!-- Dropdown menu (same as before) -->
          <div
            data-dropdown-target="menu"
            class="hidden absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-lg border border-neutral-200 py-1 z-50"
          >
            <div class="px-4 py-2 border-b border-neutral-100">
              <p class="text-sm font-medium text-neutral-900"><%= current_user.name.presence || "User" %></p>
              <p class="text-xs text-neutral-600 truncate"><%= current_user.email %></p>
            </div>

            <%= link_to dashboard_path, class: "flex items-center gap-3 px-4 py-2 text-sm text-neutral-700 hover:bg-neutral-50 transition-colors" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
              </svg>
              <span>Dashboard</span>
            <% end %>

            <%= link_to edit_user_registration_path, class: "flex items-center gap-3 px-4 py-2 text-sm text-neutral-700 hover:bg-neutral-50 transition-colors" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
              <span>Settings</span>
            <% end %>

            <div class="border-t border-neutral-100 my-1"></div>

            <%= button_to destroy_user_session_path,
                  method: :delete,
                  form: { class: "w-full" },
                  class: "flex items-center gap-3 px-4 py-2 text-sm text-neutral-700 hover:bg-neutral-50 transition-colors w-full text-left" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
              </svg>
              <span>Sign out</span>
            <% end %>
          </div>
        </div>
      <% else %>
        <%= link_to "Sign in", new_user_session_path, class: "px-4 py-1.5 text-sm text-neutral-700 hover:text-neutral-900 transition-colors" %>
        <%= link_to "Sign up", new_user_registration_path, class: "btn-orange px-4 py-1.5 text-sm" %>
      <% end %>

      <!-- Mobile: hamburger menu toggle for sidebar -->
      <button
        type="button"
        onclick="window.toggleSidebar()"
        aria-label="Toggle sidebar"
        class="md:hidden p-2 rounded-lg hover:bg-neutral-100 text-neutral-600"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>
</header>

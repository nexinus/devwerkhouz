<header class="fixed top-0 left-0 right-0 z-50 bg-white border-b border-neutral-200">
  <div class="flex items-center justify-between h-14 px-4 md:px-6">
    <!-- Left: Logo + compact pricing dropdown -->
    <div class="flex items-center gap-4">
      <%= link_to root_path, class: "flex items-center gap-2", aria: { label: "devwerkhouz home" } do %>
        <%= image_tag "dwh_fullname.png", alt: "devwerkhouz", class: "h-8 w-auto object-contain" %>
      <% end %>

      <div class="relative group">
        <button type="button" class="inline-flex items-center gap-2 px-3 py-1.5 rounded-lg hover:bg-neutral-100 transition-colors focus:outline-none focus:ring-2 focus:ring-brand focus:ring-offset-2" aria-haspopup="true" aria-expanded="false">
          Pricing
          <svg class="w-4 h-4 text-neutral-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
          </svg>
        </button>

        <div class="hidden group-hover:block absolute left-0 mt-2 w-44 bg-white shadow-md rounded-md border border-neutral-100 py-2">
          <%= link_to "Pricing", pricing_path, class: "block px-4 py-2 text-sm text-neutral-700 hover:bg-neutral-50" %>
          <%= link_to "Compare plans", pricing_path(anchor: "compare"), class: "block px-4 py-2 text-sm text-neutral-700 hover:bg-neutral-50" %>
        </div>
      </div>
    </div>

    <!-- Right: auth CTAs -->
    <div class="flex items-center gap-3">
      <%= link_to "Log in", new_user_session_path, class: "px-4 py-1.5 text-sm text-neutral-700 hover:text-neutral-900 transition-colors" %>
      <%= link_to "Sign up for free", new_user_registration_path, class: "px-4 py-1.5 bg-accent-orange hover:bg-accent-orange-dark text-white rounded-md text-sm font-medium shadow-orange-soft transition-colors" %>
    </div>
  </div>
</header>

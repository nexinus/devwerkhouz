<header class="fixed top-0 left-0 right-0 z-50 bg-white border-b border-neutral-200">
  <div class="flex items-center justify-between h-14 px-4 md:px-6">
    <!-- Left: Logo + compact pricing dropdown -->
    <div class="flex items-center gap-4">
      <%= link_to root_path, class: "flex items-center gap-2", aria: { label: "devwerkhouz home" } do %>
        <%= image_tag "dwh_fullname.png", alt: "devwerkhouz", class: "h-8 w-auto object-contain" %>
      <% end %>
    </div>

    <!-- Right: auth CTAs -->
    <div class="flex items-center gap-3">
      <%= link_to "Log in", new_user_session_path, class: "px-4 py-1.5 text-sm text-neutral-700 hover:text-neutral-900 transition-colors" %>
      <%= link_to "Sign up for free", new_user_registration_path, class: "px-4 py-1.5 bg-accent-orange hover:bg-accent-orange-dark text-white rounded-md text-sm font-medium shadow-orange-soft transition-colors" %>
    </div>
  </div>
</header>

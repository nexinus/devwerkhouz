<div class="bg-white p-6 rounded-lg shadow mb-8">
  <%= form_with model: prompt, url: prompts_path, local: false, class: "flex flex-col gap-3" do |f| %>
    <%= f.text_area :idea, placeholder: "Type your idea here...",
          rows: 5, class: "w-full border rounded px-4 py-3 focus:ring-2 focus:ring-brand/40" %>
    <%= f.submit "Generate Prompt", class: "px-4 py-2 rounded bg-brand text-white hover:bg-brand/80 transition-colors" %>
  <% end %>
</div>

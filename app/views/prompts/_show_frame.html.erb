<div class="bg-white p-4 rounded shadow" id="prompt_result_<%= prompt.id %>">
  <h2 class="text-lg font-semibold mb-2">Generated Prompt</h2>
  <pre class="whitespace-pre-wrap"><%= prompt.generated_prompt %></pre>

  <div class="mt-3 flex gap-2 items-center">
    <button class="copy-btn px-3 py-2 rounded bg-brand text-white" data-text="<%= j prompt.generated_prompt %>">Copy</button>
    <%= link_to "Edit / Re-run", new_prompt_path(prompt: { idea: prompt.idea, category: prompt.category, tone: prompt.tone, format: prompt.format }), class: "underline" %>
  </div>
</div>

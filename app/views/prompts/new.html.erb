<div class="max-w-7xl mx-auto py-8 grid grid-cols-1 md:grid-cols-3 gap-6">
  <!-- center column (span 2) -->
  <div class="md:col-span-2">
    <%= render 'form' %>
    <div id="prompt-result" class="mt-6">
      <%= turbo_frame_tag "prompt_show" do %>
        <%# initial empty state or show @generated_prompt if present %>
        <% if @generated_prompt.present? %>
          <pre class="p-4 bg-gray-100 rounded whitespace-pre-wrap"><%= @generated_prompt %></pre>
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- right column: history -->
  <div>
    <%= render 'prompts/sidebar', prompts: current_user&.prompts&.order(created_at: :desc)&.limit(50) %>
  </div>
</div>

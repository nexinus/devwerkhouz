<div class="bg-white border rounded p-3">
  <h3 class="font-semibold mb-2">Your prompts</h3>

  <% if prompts&.any? %>
    <ul class="space-y-2">
      <% prompts.each do |p| %>
        <li>
          <%= link_to p.idea.truncate(60), prompt_path(p), data: { turbo_frame: "prompt_show" }, class: "block p-2 rounded hover:bg-gray-50" %>
          <div class="text-xs text-gray-500"><%= p.created_at.strftime("%b %-d, %H:%M") %></div>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-sm text-gray-600">No prompts yet â€” create your first one!</p>
  <% end %>

  <div class="mt-3">
    <%= link_to "View all", prompts_path, class: "text-sm underline" %>
  </div>
</div>
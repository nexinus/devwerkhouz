<div class="max-w-md mx-auto mt-16 p-6 bg-white rounded-lg shadow-sm">
  <h2 class="text-2xl font-semibold mb-4">Log in to devwerkhouz</h2>

  <% if flash[:alert].present? %>
    <div class="mb-4 text-sm text-red-800 bg-red-50 p-3 rounded">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <%# show Devise resource validation errors at top %>
  <% if resource.errors.any? %>
    <div class="mb-4 p-3 rounded bg-red-50 text-red-800">
      <p class="font-medium">Please correct the following:</p>
      <ul class="list-disc ml-5 mt-2 text-sm">
        <% resource.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-4" }) do |f| %>
    <div>
      <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email,
            autofocus: true,
            autocomplete: "email",
            class: "mt-1 block w-full rounded-md border-gray-200 shadow-sm focus:ring-2 focus:ring-brand focus:border-brand #{'border-red-300' if resource.errors[:email].any?}",
            aria: { invalid: resource.errors[:email].any? } %>
      <% if resource.errors[:email].any? %>
        <p class="mt-1 text-sm text-red-700"><%= resource.errors[:email].first %></p>
      <% end %>
    </div>

    <div>
      <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
      <%= f.password_field :password,
            autocomplete: "current-password",
            class: "mt-1 block w-full rounded-md border-gray-200 shadow-sm focus:ring-2 focus:ring-brand focus:border-brand #{'border-red-300' if resource.errors[:password].any?}",
            aria: { invalid: resource.errors[:password].any? } %>
      <% if resource.errors[:password].any? %>
        <p class="mt-1 text-sm text-red-700"><%= resource.errors[:password].first %></p>
      <% end %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="flex items-center gap-2">
        <%= f.check_box :remember_me, class: "h-4 w-4 text-brand focus:ring-brand border-gray-300 rounded" %>
        <%= f.label :remember_me, class: "text-sm text-gray-600" %>
      </div>
    <% end %>

    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3">
      <div class="flex gap-2">
        <%= f.submit "Log in", class: "px-4 py-2 rounded bg-brand text-white font-medium hover:bg-brand/90 transition" %>
        <%= link_to "Sign up", new_user_registration_path, class: "px-4 py-2 rounded border text-sm hover:bg-gray-50 transition" %>
      </div>

      <div class="text-sm">
        <%= link_to "Forgot your password?", new_user_password_path, class: "text-sm text-gray-600 hover:text-brand" %>
      </div>
    </div>
  <% end %>

  <%# Optional: Google OAuth button (renders only if the helper exists) %>
  <% if respond_to?(:user_google_oauth2_omniauth_authorize_path) %>
    <div class="mt-6">
      <div class="relative">
        <div class="absolute inset-0 flex items-center" aria-hidden="true">
          <div class="w-full border-t border-gray-200"></div>
        </div>
        <div class="relative flex justify-center text-xs">
          <span class="bg-white px-2 text-gray-500">or</span>
        </div>
      </div>

      <div class="mt-4">
        <%= link_to user_google_oauth2_omniauth_authorize_path, data: { turbo: false }, class: "w-full inline-flex items-center justify-center gap-3 px-4 py-2 border rounded text-sm hover:bg-gray-50 transition" do %>
          <svg class="h-5 w-5" viewBox="0 0 48 48" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
            <path fill="#EA4335" d="M24 9.5c3.7 0 6.4 1.6 7.9 2.9l5.9-5.6C34.1 3 29.5 1.5 24 1.5 14.6 1.5 6.7 7.6 3.1 16.1l6.9 5.3C11.7 15.2 17.3 9.5 24 9.5z"/>
            <path fill="#4285F4" d="M46.5 24.5c0-1.6-.1-2.8-.4-4H24v7.6h12.6c-.5 3-2.8 6.3-6.6 8.1l6.9 5.3C43.5 37.8 46.5 31.9 46.5 24.5z"/>
            <path fill="#FBBC05" d="M10.1 28.7A14.3 14.3 0 0 1 9 24.5c0-1.4.2-2.6.6-3.8L3 15.4C1.1 18.6 0 21.9 0 24.5 0 27.2 1.1 30.4 3 33.6l7.1-4.9z"/>
            <path fill="#34A853" d="M24 46.5c5.5 0 10.1-1.5 13.8-4.2l-6.9-5.3c-2 1.3-4.4 2.1-6.9 2.1-6.7 0-12.3-5.7-13.9-13.4L3.1 32.9C6.7 41.4 14.6 46.5 24 46.5z"/>
          </svg>
          <span>Sign in with Google</span>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

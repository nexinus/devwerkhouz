<div class="max-w-md mx-auto mt-16 p-6 bg-white rounded-lg shadow-sm">
  <h2 class="text-2xl font-semibold mb-4">Edit account</h2>

  <% if flash[:notice].present? %>
    <div class="mb-4 text-sm text-green-800 bg-green-50 p-3 rounded">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <%= render "devise/shared/error_messages", resource: resource %>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-4" }) do |f| %>
    <div>
      <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :name,
            autocomplete: "name",
            class: "mt-1 block w-full rounded-md border-gray-200 shadow-sm focus:ring-2 focus:ring-brand focus:border-brand #{'border-red-300' if resource.errors[:name].any?}",
            aria: { invalid: resource.errors[:name].any? } %>
    </div>

    <div>
      <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email,
            autocomplete: "email",
            class: "mt-1 block w-full rounded-md border-gray-200 shadow-sm focus:ring-2 focus:ring-brand focus:border-brand #{'border-red-300' if resource.errors[:email].any?}",
            aria: { invalid: resource.errors[:email].any? } %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="text-sm text-gray-600">Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div>
      <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
      <div class="text-xs text-gray-500 mb-1">Leave blank to keep current password</div>
      <%= f.password_field :password,
            autocomplete: "new-password",
            class: "mt-1 block w-full rounded-md border-gray-200 shadow-sm focus:ring-2 focus:ring-brand focus:border-brand" %>
      <% if @minimum_password_length %>
        <p class="mt-1 text-xs text-gray-500"><%= @minimum_password_length %> characters minimum</p>
      <% end %>
    </div>

    <div>
      <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
      <%= f.password_field :password_confirmation,
            autocomplete: "new-password",
            class: "mt-1 block w-full rounded-md border-gray-200 shadow-sm focus:ring-2 focus:ring-brand focus:border-brand" %>
    </div>

    <div>
      <%= f.label :current_password, class: "block text-sm font-medium text-gray-700" %>
      <div class="text-xs text-gray-500 mb-1">We need your current password to confirm changes</div>
      <%= f.password_field :current_password,
            autocomplete: "current-password",
            class: "mt-1 block w-full rounded-md border-gray-200 shadow-sm focus:ring-2 focus:ring-brand focus:border-brand" %>
    </div>

    <div class="flex items-center gap-2">
      <%= f.submit "Update", class: "px-4 py-2 rounded bg-brand text-white font-medium hover:bg-brand/90 transition" %>
      <%= link_to "Back", (request.referer || root_path), class: "px-4 py-2 rounded border text-sm hover:bg-gray-50 transition" %>
    </div>
  <% end %>

  <h3 class="mt-6 text-lg font-medium">Cancel account</h3>
  <p class="text-sm text-gray-600 mb-2">If you delete your account, your data will be removed. This action cannot be undone.</p>

  <div>
    <%= button_to "Cancel my account", registration_path(resource_name),
          data: { confirm: "Are you sure you want to cancel your account? This action cannot be undone." },
          method: :delete,
          class: "px-4 py-2 rounded bg-red-50 text-red-700 border hover:bg-red-100 transition" %>
  </div>
</div>

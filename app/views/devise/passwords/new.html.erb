<div class="min-h-screen flex items-center justify-center py-12 px-4 bg-neutral-50">
  <div class="max-w-md w-full bg-white rounded-xl shadow p-8">
    <h2 class="text-2xl font-bold text-neutral-900 mb-2">Forgot your password?</h2>
    <p class="text-sm text-neutral-600 mb-6">Enter your email and we'll send instructions to reset your password.</p>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "space-y-4" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div>
        <%= f.label :email, class: "block text-sm font-medium text-neutral-700 mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "block w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-accent-orange/30" %>
      </div>

      <div>
        <%= f.submit "Send me reset password instructions", class: "w-full inline-flex justify-center px-4 py-2 rounded bg-brand text-white hover:bg-brand/80 transition-colors" %>
      </div>
    <% end %>

    <div class="mt-6 text-center text-sm text-neutral-500">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
  <!-- left: empty (sidebar lives in layout) or promotional column -->
  <div class="hidden lg:block"></div>

  <!-- center: main prompt area -->
  <div class="lg:col-span-2">
    <div class="bg-white border rounded-lg shadow p-6">
      <h1 class="text-2xl font-bold mb-3">The houz for your AI prompt</h1>
      <p class="text-gray-600 mb-4">Turn your idea into a perfect promptâ€”fast. Save and reuse prompts like a pro.</p>

      <%= render 'prompts/form' %>

      <div id="prompt-result" class="mt-6">
        <%= turbo_frame_tag "prompt_show" do %>
          <% if @generated_prompt.present? %>
            <div class="p-4 bg-gray-50 rounded">
              <pre class="whitespace-pre-wrap"><%= @generated_prompt %></pre>
              <div class="mt-3">
                <button class="copy-btn px-3 py-2 rounded bg-brand text-white" data-text="<%= j @generated_prompt %>">Copy</button>
              </div>
            </div>
          <% else %>
            <div class="text-sm text-gray-500">Your generated prompt will appear here.</div>
          <% end %>
        <% end %>
      </div>
    </div>

    <!-- how it works -->
    <div class="mt-6 grid grid-cols-1 sm:grid-cols-3 gap-4">
      <div class="bg-white p-4 rounded shadow">
        <h4 class="font-semibold">1. Describe</h4>
        <p class="text-sm text-gray-600">Tell us your idea in plain language.</p>
      </div>
      <div class="bg-white p-4 rounded shadow">
        <h4 class="font-semibold">2. Generate</h4>
        <p class="text-sm text-gray-600">We create a concise, model-ready prompt.</p>
      </div>
      <div class="bg-white p-4 rounded shadow">
        <h4 class="font-semibold">3. Save</h4>
        <p class="text-sm text-gray-600">Store prompts in your history for future reuse.</p>
      </div>
    </div>
  </div>
</div>

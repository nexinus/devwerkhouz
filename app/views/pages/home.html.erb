<div class="min-h-[calc(100vh-4rem)] flex items-start justify-center py-12 px-4">
  <div class="w-full max-w-4xl space-y-6">

    <!-- Hero / Composer card -->
    <div class="bg-white border rounded-2xl shadow-lg p-8">
      <div class="flex items-start justify-between gap-4">
        <div>
          <h1 class="text-3xl md:text-4xl font-extrabold text-neutral-900">The houz for your AI prompt</h1>
          <p class="mt-2 text-neutral-600">Turn your idea into a perfect prompt‚Äîfast. Save and reuse prompts like a pro.</p>
        </div>
      </div>

      <!-- Composer: bigger, centred, pleasing -->
      <div class="mt-8 flex justify-center">
        <div class="w-full max-w-3xl">
          <div class="space-y-4">

              <div class="bg-neutral-50 border border-neutral-100 rounded-2xl p-6 shadow-sm hover:shadow-md transition-shadow duration-200">
                <%= render 'prompts/form', locals: { compact: false } %>
              </div>

              <div id="prompt-result" class="mt-1">
                <%= turbo_frame_tag "prompt_show" do %>
                  <% if @generated_prompt.present? %>
                    <div class="p-4 bg-white border rounded-lg shadow-sm">
                      <pre class="whitespace-pre-wrap text-sm"><%= @generated_prompt %></pre>

                      <div class="mt-3 flex gap-2">
                        <button class="copy-btn px-3 py-2 rounded bg-accent-orange text-white" data-text="<%= j @generated_prompt %>">Copy</button>
                        <button class="px-3 py-2 rounded border" onclick="navigator.clipboard.writeText(`<%= j @generated_prompt %>`)">Copy to clipboard</button>
                        <%= link_to "Save", new_prompt_path(prompt: { idea: @generated_prompt }), class: "px-3 py-2 rounded border" %>
                      </div>
                    </div>
                  <% else %>
                    <div class="text-sm text-neutral-500">Your generated prompt will appear here.</div>
                  <% end %>
                <% end %>
              </div>
        </div>
      </div>
    </div>

    <!-- How it works / benefits -->
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
      <div class="bg-white p-5 rounded-lg shadow-sm text-center">
        <div class="text-2xl mb-2">‚úçÔ∏è</div>
        <h4 class="font-semibold">Describe</h4>
        <p class="text-sm text-neutral-600">Tell us your idea in plain language.</p>
      </div>

      <div class="bg-white p-5 rounded-lg shadow-sm text-center">
        <div class="text-2xl mb-2">‚ö°</div>
        <h4 class="font-semibold">Generate</h4>
        <p class="text-sm text-neutral-600">We create a concise, model-ready prompt.</p>
      </div>

      <div class="bg-white p-5 rounded-lg shadow-sm text-center">
        <div class="text-2xl mb-2">üìÅ</div>
        <h4 class="font-semibold">Save</h4>
        <p class="text-sm text-neutral-600">Store prompts in your history for future reuse.</p>
      </div>
    </div>
  </div>
</div>

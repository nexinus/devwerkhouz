<% content_for :title, "Payment Successful — devwerkhouz" %>

<section class="min-h-screen flex items-center justify-center bg-neutral-50 text-neutral-800 px-6 py-20">
  <div class="w-full max-w-2xl bg-white border border-neutral-200 rounded-2xl p-10 shadow-orange-soft">
    
    <header class="flex items-center gap-4 mb-6">
      <div>
        <h1 class="text-2xl font-semibold text-neutral-800">Thanks — your subscription is active</h1>
      </div>
    </header>

    <div class="flex items-center justify-center my-8">
      <div class="w-24 h-24 rounded-full border-4 border-accent-orange/30 flex items-center justify-center bg-neutral-50">
        <svg width="48" height="48" viewBox="0 0 24 24" fill="none">
          <path d="M20 6L9 17l-5-5" stroke="#819231" stroke-width="2.2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </div>
    </div>

    <p class="text-center text-neutral-600 leading-relaxed mb-8">
      Your payment went through successfully and your Pro access is now active.
      You can generate unlimited prompts, save and export your work, and enjoy priority support.
    </p>

    <div class="flex justify-center gap-4">
      <% acct = (defined?(account_path) ? account_path : root_path) %>
      <% pr = (defined?(pricing_path) ? pricing_path : '/pricing') %>

      <%= link_to "Go to my account", acct,
          class: "px-6 py-3 bg-brand from-brand to-accent-orange text-white font-semibold rounded-xl shadow-orange-strong hover:opacity-90 transition" %>

      <%= link_to "Back to pricing", pr,
          class: "px-6 py-3 border border-neutral-200 rounded-xl text-neutral-700 hover:border-accent-orange hover:text-accent-orange transition" %>
    </div>

    <div class="text-center text-sm text-neutral-500 mt-8">
      Need help? Email <a href="mailto:devwerkhouz.team@gmail.com" class="underline text-accent-orange hover:text-accent-orange-dark transition">devwerkhouz.team@gmail.com</a>.<br/>
      Your card will be charged monthly.
    </div>
  </div>
</section>
